    "version": "0.2.0",
    "configurations": [
      {
        "name": "(lldb) Launch",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/readdir_example.out",
        "preLaunchTask": "build",
        "args": ["-arg1", "-arg2"]
      },
      {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/readdir_example.exe",
        "preLaunchTask": "build",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "C:/mingw-w64/i686-8.1.0-posix-dwarf-rt_v6-rev0/mingw32/bin/gdb.exe",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }